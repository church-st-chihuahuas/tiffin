.container.page-content
  = form_for :report_form, method: :get do |f|
    #report_filter
      %table
        %tr
          %td
            .field-set
              .field.clearfix
                .field-label.reports_label
                  Filter by:
                = f.text_field :q
    .controls
      = f.submit 'Search'

    %table
      %tr
        %th
          Name
        %th
          Description

      - @meals.each do | meal |
        %tr
          %td
            = link_to meal.short_name, meal_path(meal)
          %td
            =meal.description

