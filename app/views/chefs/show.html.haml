.container
  .row
    %h1
      Chef Page

  %hr

  .row
    %h2
      = @chef.user.full_name

  .row
    .business

      .business-name
        %strong= @chef.business_name

      .business-description
        = @chef.business_description

  %hr

  .row
    .meals
      %h3 Meals Offered

      .row
        - @chef.meal.each do |meal|
          .col
            .card
              = image_tag('tiffin_cover.jpg', class: 'card-img-top')
              .card-body
                %h5.card-title= meal.short_name
                %p.card-text= meal.description
                .meal-cuisines
                  - meal.cuisine.each do |cuisine|
                    %small= cuisine.name
                .meal-accommodations
                  - meal.dietary_accommodation.each do |acc|
                    %small= acc.name